{
  "name": "ebb-and-bloom",
  "version": "1.1.0",
  "description": "Governor-based world exploration engine and game",
  "type": "module",
  "main": "./engine/index.ts",
  "scripts": {
    "dev": "vite game/index.html --host",
    "build": "vite build game/index.html --outDir game/dist",
    "build:android": "npm run build && npx cap sync android && npx cap open android",
    "build:ios": "npm run build && npx cap sync ios && npx cap open ios",
    "sync": "npx cap sync",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@capacitor/app": "^7.1.0",
    "@capacitor/core": "^7.4.4",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/preferences": "^7.0.2",
    "@react-three/drei": "^9.114.3",
    "@react-three/fiber": "^8.17.10",
    "fast-simplex-noise": "^4.0.0",
    "leva": "^0.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.5",
    "seedrandom": "^3.0.5",
    "simple-statistics": "^7.8.8",
    "simplex-noise": "^4.0.3",
    "three": "^0.169.0",
    "yuka": "^0.7.8",
    "zod": "^3.24.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@playwright/test": "^1.47.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/seedrandom": "^3.0.8",
    "@types/three": "^0.169.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "google-fonts-helper": "^3.7.3",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
