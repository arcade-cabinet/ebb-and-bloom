{
  "name": "ebb-and-bloom",
  "version": "1.1.0",
  "description": "Governor-based world exploration engine and game",
  "type": "module",
  "main": "./engine/index.ts",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview --host --port 5173",
    "preview:build": "pnpm run build && vite preview --host --port 5173",
    "build:android": "pnpm run build && npx cap sync android && npx cap open android",
    "build:ios": "pnpm run build && npx cap sync ios && npx cap open ios",
    "sync": "npx cap sync",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:browser": "playwright test",
    "test:browser:prod": "PREVIEW=1 playwright test",
    "test:browser:ui": "playwright test --ui",
    "test:browser:codegen": "playwright codegen http://localhost:5173",
    "test:browser:report": "playwright show-report",
    "test:all": "pnpm run test && pnpm run test:browser",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "quality": "pnpm run type-check && pnpm run lint && pnpm run format:check && pnpm run test",
    "quality:fix": "pnpm run lint:fix && pnpm run format",
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit --fix",
    "upgrade": "pnpm update --latest",
    "upgrade:interactive": "pnpm update --interactive --latest"
  },
  "dependencies": {
    "@capacitor-community/app-react": "0.1.0",
    "@capacitor-community/device-react": "0.1.0",
    "@capacitor-community/filesystem-react": "0.1.0",
    "@capacitor/app": "^7.1.0",
    "@capacitor/core": "^7.4.4",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/preferences": "^7.0.2",
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@mui/icons-material": "7.3.5",
    "@mui/material": "7.3.5",
    "@react-spring/three": "10.0.3",
    "@react-three/cannon": "6.6.0",
    "@react-three/drei": "10.7.6",
    "@react-three/fiber": "9.4.0",
    "@react-three/postprocessing": "3.0.4",
    "d3-force-3d": "3.0.6",
    "fast-simplex-noise": "^4.0.0",
    "leva": "^0.10.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-router-dom": "^7.9.5",
    "seedrandom": "^3.0.5",
    "simple-statistics": "^7.8.8",
    "simplex-noise": "^4.0.3",
    "three": "^0.169.0",
    "three-stdlib": "2.36.1",
    "troika-three-text": "0.52.4",
    "yuka": "^0.7.8",
    "zod": "^3.24.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@playwright/test": "^1.47.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.10.2",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/seedrandom": "^3.0.8",
    "@types/three": "^0.169.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "2.1.9",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "google-fonts-helper": "^3.7.3",
    "prettier": "3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.9"
  },
  "keywords": [
    "engine",
    "simulation",
    "procedural",
    "law-based",
    "react-three-fiber",
    "r3f",
    "three.js",
    "yuka",
    "universe",
    "deterministic"
  ],
  "author": "Ebb & Bloom Contributors",
  "license": "MIT"
}
