{
  "name": "ebb-and-bloom",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "process-compose up",
    "dev:backend": "pnpm --filter @ebb/backend dev",
    "dev:frontend": "pnpm --filter @ebb/frontend dev",
    "dev:cli": "pnpm --filter @ebb/cli dev",
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter @ebb/backend build",
    "build:frontend": "pnpm --filter @ebb/frontend build",
    "build:cli": "pnpm --filter @ebb/cli build",
    "test": "pnpm -r test",
    "test:backend": "pnpm --filter @ebb/backend test",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "setup": "pnpm install"
  },
