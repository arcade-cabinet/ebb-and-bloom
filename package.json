{
  "name": "ebb-and-bloom-engine",
  "version": "1.0.0",
  "description": "Law-based universe simulation engine with React Three Fiber visualization",
  "type": "module",
  "main": "./engine/index.ts",
  "exports": {
    ".": "./engine/index.ts",
    "./laws": "./engine/laws/index.ts",
    "./agents": "./engine/agents/index.ts",
    "./spawners": "./engine/spawners/index.ts",
    "./simulation": "./engine/simulation/index.ts"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build:capacitor": "npm run build && npx cap sync",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@react-three/drei": "^9.114.3",
    "@react-three/fiber": "^8.17.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.169.0",
    "yuka": "^0.7.8",
    "seedrandom": "^3.0.5",
    "simplex-noise": "^4.0.3",
    "fast-simplex-noise": "^4.0.0",
    "simple-statistics": "^7.8.8",
    "zod": "^3.24.1",
    "zustand": "^5.0.8",
    "@capacitor/core": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/preferences": "^7.0.2"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@playwright/test": "^1.47.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/seedrandom": "^3.0.8",
    "@types/three": "^0.169.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "google-fonts-helper": "^3.7.3",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "engine",
    "simulation",
    "procedural",
    "law-based",
    "react-three-fiber",
    "r3f",
    "three.js",
    "yuka",
    "universe",
    "deterministic"
  ],
  "author": "Ebb & Bloom Contributors",
  "license": "MIT"
}
